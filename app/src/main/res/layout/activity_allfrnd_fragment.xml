<?xml version='1.0' encoding='utf-8'?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:paddingBottom="@dimen/padding20"
        android:padding="15dp"
        android:background="#100F0F"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/pading18"
            android:text="About"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/txt_about"
            android:layout_marginTop="@dimen/pading10"
            android:textSize="@dimen/pading16"
            android:text=""
            android:textColor="@color/light_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_marginTop="@dimen/pading20"
            android:textStyle="bold"
            android:textSize="@dimen/pading18"
            android:text="Opening Hours"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <RelativeLayout
            android:layout_marginTop="@dimen/pading20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/LL_day"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:textSize="@dimen/pading16"
                    android:text="Monday "
                    android:textColor="@color/light_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:layout_marginTop="@dimen/padding5"
                    android:textSize="@dimen/pading16"
                    android:text="Tuesday "
                    android:textColor="@color/light_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                 <TextView
                    android:layout_marginTop="@dimen/padding5"
                    android:textSize="@dimen/pading16"
                    android:text="Wednesday "
                    android:textColor="@color/light_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:layout_marginTop="@dimen/padding5"
                    android:textSize="@dimen/pading16"
                    android:text="Thursday "
                    android:textColor="@color/light_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:layout_marginTop="@dimen/padding5"
                    android:textSize="@dimen/pading16"
                    android:text="Friday "
                    android:textColor="@color/light_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:layout_marginTop="@dimen/padding5"
                    android:textSize="@dimen/pading16"
                    android:text="Saturday "
                    android:textColor="@color/light_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:layout_marginTop="@dimen/padding5"
                    android:textSize="@dimen/pading16"
                    android:text="Sunday "
                    android:textColor="@color/light_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:layout_marginTop="@dimen/padding5"
                    android:textSize="@dimen/pading16"
                    android:text="Shop Off "
                    android:textColor="@color/light_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>


            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/padding20"
                android:layout_toRightOf="@+id/LL_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/txt_monday"
                    android:textSize="@dimen/pading16"
                    android:text=""
                    android:textColor="@color/light_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/txt_tuesday"
                    android:layout_marginTop="@dimen/padding5"
                    android:textSize="@dimen/pading16"
                    android:text=""
                    android:textColor="@color/light_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/txt_wednesday"
                    android:layout_marginTop="@dimen/padding5"
                    android:textSize="@dimen/pading16"
                    android:text=""
                    android:textColor="@color/light_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/txt_thrsday"
                    android:layout_marginTop="@dimen/padding5"
                    android:textSize="@dimen/pading16"
                    android:text=""
                    android:textColor="@color/light_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/txt_friday"
                    android:layout_marginTop="@dimen/padding5"
                    android:textSize="@dimen/pading16"
                    android:text=""
                    android:textColor="@color/light_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/txt_saturday"
                    android:layout_marginTop="@dimen/padding5"
                    android:textSize="@dimen/pading16"
                    android:text=""
                    android:textColor="@color/light_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/txt_sunday"
                    android:layout_marginTop="@dimen/padding5"
                    android:textSize="@dimen/pading16"
                    android:text=""
                    android:textColor="@color/light_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/txt_Off"
                    android:layout_marginTop="@dimen/padding5"
                    android:textSize="@dimen/pading16"
                    android:text=""
                    android:textColor="@color/light_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>


            </LinearLayout>



        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_marginTop="@dimen/pading10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/txt_date"
                android:textSize="@dimen/pading16"
                android:text="Monday - Friday "
                android:textColor="@color/light_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/txt_date"
                android:id="@+id/txt_time"
                android:textSize="@dimen/pading16"
                android:text="9:00 AM - 1:00 PM"
                android:textColor="@color/light_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </RelativeLayout>

        <TextView
            android:layout_marginTop="@dimen/pading20"
            android:textStyle="bold"
            android:textSize="@dimen/pading18"
            android:text="Address"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_marginTop="@dimen/pading20"
            android:id="@+id/txt_address"
            android:textSize="@dimen/pading16"
            android:text="030 Zulab green ,o Konille,SD,\n United state Of amrica"
            android:textColor="@color/light_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_marginTop="@dimen/pading20"
            android:textSize="@dimen/pading16"
            android:text="get directions 4.2km"
            android:textColor="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>

</RelativeLayout>