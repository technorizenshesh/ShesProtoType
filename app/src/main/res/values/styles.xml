<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">@dimen/pading20</item>
        <item name="android:maxHeight">@dimen/pading20</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">#FF9113</item>
    </style>

    <style name="MyRatingBar1" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">@dimen/pading20</item>
        <item name="android:maxHeight">@dimen/pading20</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">#FF9113</item>
    </style>

    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/yellow</item>
        <item name="android:textColorSecondary">@color/yellow</item>
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="RadioButton1" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/yellow</item>
        <item name="android:textColorSecondary">@color/yellow</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

</resources>
